<configuration status="info">
    <appenders>
        <Console name="Console">
            <!--
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss:SSS} [%t] %-5p  %c: %m%n" />
             -->
            <PatternLayout pattern="%-5p  %c: %m%n" />
            <ThresholdFilter level="WARN" onMatch="ACCEPT"
                onMismatch="DENY" />
        </Console>
        <RandomAccessFile name="BoAppender"
            fileName="../standalone/log/${date:yyyy-MM-dd_HH-mm-ss}-meetingportal.log"
            append="false" immediateFlush="true">
            <PatternLayout
                pattern="%d{dd.MM.yyyy HH:mm:ss:SS} [%t] %-5p %c: %m%ex{short}%n" />
            alwaysWriteExceptions="false"
            <ThresholdFilter level="WARN" onMatch="ACCEPT"
                onMismatch="DENY" />
        </RandomAccessFile>
    </appenders>
    <loggers>
        <root level="WARN" includeLocation="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="BoAppender" />
        </root>
        <logger name="de.meetingapps.meetingportal" level="WARN"
            additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="BoAppender" />
        </logger>
    </loggers>
</configuration>
