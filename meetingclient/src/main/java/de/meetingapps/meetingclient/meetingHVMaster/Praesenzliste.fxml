<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="tfSearch" promptText="Suchen..." AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="15.0" />
      <Button fx:id="btnRead" mnemonicParsing="false" onAction="#onRead" prefWidth="220.0" text="Aktualisieren" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0" />
      <TableView fx:id="tableView" layoutX="15.0" layoutY="55.0" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="55.0">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="anr" prefWidth="100.0" text="Aktionärsnummer" />
            <TableColumn fx:id="ek" prefWidth="100.0" text="EK-Nummer" />
            <TableColumn fx:id="stimmen" prefWidth="100.0" text="Stimmen" />
            <TableColumn prefWidth="100.0" text="Aktionär">
               <columns>
                  <TableColumn fx:id="a_vorname" prefWidth="100.0" text="Vorname" />
                  <TableColumn fx:id="a_name" prefWidth="100.0" text="Nachname" />
               </columns>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Vertreter">
               <columns>
                  <TableColumn fx:id="v_vorname" prefWidth="100.0" text="Vorname" />
                  <TableColumn fx:id="v_name" prefWidth="100.0" text="Nachname" />
               </columns>
            </TableColumn>
            <TableColumn fx:id="sammelkarte" prefWidth="100.0" text="Sammelkarte" />
            <TableColumn fx:id="status" prefWidth="100.0" text="Status" />
         </columns>
      </TableView>
      <Button fx:id="btnClose" mnemonicParsing="false" prefWidth="100.0" text="Beenden" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" />
      <Label fx:id="lblEntries" alignment="CENTER_RIGHT" prefHeight="25.0" text="Einträge: " AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="250.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" layoutX="1165.0" layoutY="55.0" prefWidth="220.0" style="-fx-border-color: #C8C8C8;" AnchorPane.bottomAnchor="55.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="55.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" text="Statistik" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region maxHeight="30.0" VBox.vgrow="ALWAYS" />
            <StackPane fx:id="stackPane" minHeight="200.0" prefHeight="250.0">
               <children>
                  <PieChart fx:id="chart" legendVisible="false" />
                  <Circle fill="#f2f2f2" radius="60.0" stroke="BLACK" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="0.0" />
                  <Label fx:id="lblPercent" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <Region layoutX="10.0" layoutY="635.0" VBox.vgrow="ALWAYS" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Angemeldete Aktien">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="lblRegistered" alignment="CENTER" contentDisplay="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Region VBox.vgrow="ALWAYS" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Aktuell Anwesend">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="lblPresent" alignment="CENTER" contentDisplay="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Region VBox.vgrow="ALWAYS" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Maximal Anwesend">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="lblMaxPresent" alignment="CENTER" contentDisplay="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Label fx:id="lblUpdateTime" alignment="CENTER" layoutX="1281.0" layoutY="764.0" prefHeight="25.0" prefWidth="220.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <ToggleButton fx:id="tbReload" focusTraversable="false" mnemonicParsing="false" onAction="#onReload" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0" />
   </children>
</AnchorPane>
