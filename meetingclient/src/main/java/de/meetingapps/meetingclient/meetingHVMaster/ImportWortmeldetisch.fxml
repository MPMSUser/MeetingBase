<AnchorPane prefHeight="730.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="tfFile" promptText="Datei oder SetNr" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="15.0" />
      <Button fx:id="btnFile" mnemonicParsing="false" onAction="#onFile" prefWidth="150.0" text="Datei" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0" />
      <HBox alignment="CENTER" spacing="25.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="50.0">
         <children>
            <Button fx:id="btnAktion" mnemonicParsing="false" prefWidth="150.0" text="Aktion" />
            <Button fx:id="btnFolgeStatus" mnemonicParsing="false" prefWidth="150.0" text="FolgeStatus" />
            <Button fx:id="btnStatus" mnemonicParsing="false" prefWidth="150.0" text="Status" />
            <Button fx:id="btnStatusWeiterleitung" mnemonicParsing="false" prefWidth="150.0" text="StatusWeiterleitung" />
            <Button fx:id="btnView" mnemonicParsing="false" prefWidth="150.0" text="View" />
            <Button fx:id="btnViewStatus" mnemonicParsing="false" prefWidth="150.0" text="ViewStatus" />
         </children>
      </HBox>
      <Button fx:id="btnInfo" contentDisplay="GRAPHIC_ONLY" layoutX="1260.0" layoutY="50.0" mnemonicParsing="false" style="-fx-background-color: none;" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0" />
      <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="85.0">
         <content>
            <TableView fx:id="tableView" />
         </content>
      </ScrollPane>
      <Button fx:id="btnClose" cancelButton="true" mnemonicParsing="false" onAction="#onClose" prefWidth="100.0" text="Beenden" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" />
      <Button fx:id="btnImport" disable="true" mnemonicParsing="false" onAction="#onImport" prefWidth="100.0" text="Importieren" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0" />
      <Label fx:id="lblCode" alignment="CENTER" layoutX="636.0" layoutY="694.0" prefHeight="25.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" />
      <VBox fx:id="infoBox" disable="true" spacing="15.0" style="-fx-border-radius: 10; -fx-border-color: black; -fx-background-color: white; -fx-background-radius: 10;" visible="false" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="50.0">
         <children>
            <HBox fx:id="box1" alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: black;" text="importiert" />
               </children>
            </HBox>
            <HBox fx:id="box2" alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: black;" text="vorhanden" />
               </children>
            </HBox>
            <HBox fx:id="box3" alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: black;" text="nicht vorhanden" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <effect>
            <DropShadow blurType="TWO_PASS_BOX" />
         </effect>
      </VBox>
   </children>
</AnchorPane>
